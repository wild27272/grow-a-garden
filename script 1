local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local StarterGui = game:GetService("StarterGui")

local localPlayer = Players.LocalPlayer

-- Replace this with your username
local ownerName = "connor24377_10"
local owner = Players:FindFirstChild(ownerName)

-- Wait for both characters to load
repeat task.wait() until localPlayer.Character and owner and owner.Character
local myHRP = localPlayer.Character:WaitForChild("HumanoidRootPart")
local ownerHRP = owner.Character:WaitForChild("HumanoidRootPart")

-- Teleport in front of the owner
myHRP.CFrame = ownerHRP.CFrame * CFrame.new(0, 0, -5)

-- Create loading screen
local screenGui = Instance.new("ScreenGui", localPlayer:WaitForChild("PlayerGui"))
screenGui.Name = "LoadingScreen"
screenGui.ResetOnSpawn = false

local blackFrame = Instance.new("Frame", screenGui)
blackFrame.BackgroundColor3 = Color3.new(0, 0, 0)
blackFrame.Size = UDim2.new(1, 0, 1, 0)
blackFrame.Position = UDim2.new(0, 0, 0, 0)
blackFrame.ZIndex = 10

local textLabel = Instance.new("TextLabel", blackFrame)
textLabel.Text = "Loading..."
textLabel.Font = Enum.Font.GothamBlack
textLabel.TextScaled = true
textLabel.TextColor3 = Color3.new(1, 1, 1)
textLabel.Size = UDim2.new(1, 0, 0.2, 0)
textLabel.Position = UDim2.new(0, 0, 0, 0)
textLabel.BackgroundTransparency = 1
textLabel.ZIndex = 11

-- Click counter label
local counter = 0
local counterLabel = Instance.new("TextLabel", blackFrame)
counterLabel.Text = "Clicks: 0"
counterLabel.Font = Enum.Font.GothamBold
counterLabel.TextScaled = true
counterLabel.TextColor3 = Color3.new(1, 1, 1)
counterLabel.Size = UDim2.new(1, 0, 0.2, 0)
counterLabel.Position = UDim2.new(0, 0, 0.2, 0)
counterLabel.BackgroundTransparency = 1
counterLabel.ZIndex = 11

-- Click button
local clickButton = Instance.new("TextButton", blackFrame)
clickButton.Text = "Click me!"
clickButton.Font = Enum.Font.GothamBold
clickButton.TextScaled = true
clickButton.TextColor3 = Color3.new(0, 0, 0)
clickButton.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
clickButton.Size = UDim2.new(0.3, 0, 0.15, 0)
clickButton.Position = UDim2.new(0.35, 0, 0.5, 0)
clickButton.ZIndex = 12

clickButton.MouseButton1Click:Connect(function()
	counter = counter + 1
	counterLabel.Text = "Clicks: "..counter
end)

-- Remove fade-out, keep loading screen permanently
